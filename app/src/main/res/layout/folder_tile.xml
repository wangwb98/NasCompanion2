<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="@dimen/folder_list_height">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/sym_contact_card"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="1" android:layout_marginLeft="30dp" android:layout_marginTop="34dp"/>
    <CheckBox
            android:text="@string/checkbox"
            android:layout_width="26dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/checkBox" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/folderName" android:layout_toEndOf="@+id/checkBox"
            android:layout_marginStart="8dp"/>
</RelativeLayout>
