<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="@dimen/folder_list_height">

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:id="@+id/checkBox" />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/sym_contact_card"
            android:id="@+id/imageView"
            android:layout_toRightOf="@+id/checkBox"
            android:layout_weight="1" android:layout_marginLeft="4dp" android:layout_marginTop="7dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/folderName"
            android:layout_toEndOf="@+id/imageView" android:layout_marginStart="3dp" android:layout_alignTop="@+id/imageView"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView"/>
</RelativeLayout>
